<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".control.Register">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/register">

    <EditText

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/edittext_bg"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:id="@+id/edt_firstname"
        android:inputType="text"
        android:hint="first name"
        android:layout_marginTop="10dp"
        android:textColorHint="#f1c40f "
        android:textColor="#f1c40f"
        android:textColorHighlight="#000000"/>

    <EditText

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/edittext_bg"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:id="@+id/edt_lastname"
        android:inputType="text"
        android:hint="last name"
        android:layout_marginTop="10dp"
        android:textColorHint="#f1c40f"
        android:textColor="#f1c40f"
        android:textColorHighlight="#000000"/>

    <EditText

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/edittext_bg"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:id="@+id/edt_usercode"
        android:inputType="number"
        android:hint="user code"
        android:layout_marginTop="10dp"
        android:textColorHint="#f1c40f"
        android:textColor="#f1c40f"
        android:textColorHighlight="#000000"/>

    <EditText

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/edittext_bg"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:id="@+id/edt_age"
        android:inputType="number"
        android:hint="age"
        android:layout_marginTop="10dp"
        android:textColorHint="#f1c40f"
        android:textColor="#f1c40f"
        android:textColorHighlight="#000000"/>

    <EditText

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/edittext_bg"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:id="@+id/edt_email"
        android:inputType="textEmailAddress"
        android:hint="email"
        android:layout_marginTop="10dp"
        android:textColorHint="#f1c40f"
        android:textColor="#f1c40f"
        android:textColorHighlight="#000000"/>

    <EditText

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/edittext_bg"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:id="@+id/edt_password"
        android:inputType="textPassword"
        android:hint="password"
        android:layout_marginTop="10dp"
        android:textColorHint="#f1c40f"
        android:textColor="#f1c40f"
        android:textColorHighlight="#000000"
        android:ems="10"/>

    <EditText

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/edittext_bg"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:id="@+id/edt_educationDegree"
        android:inputType="text"
        android:hint="education degree"
        android:layout_marginTop="10dp"
        android:textColorHint="#f1c40f"
        android:textColor="#f1c40f"
        android:textColorHighlight="#000000"
        android:ems="10"/>

    <EditText

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/edittext_bg"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:id="@+id/edt_maritalStatus"
        android:inputType="text"
        android:hint="marital status"
        android:layout_marginTop="10dp"
        android:textColorHint="#f1c40f"
        android:textColor="#f1c40f"
        android:textColorHighlight="#000000"
        android:ems="10"/>

    <EditText

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/edittext_bg"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:id="@+id/edt_gender"
        android:inputType="text"
        android:hint="gender"
        android:layout_marginTop="10dp"
        android:textColorHint="#f1c40f"
        android:textColor="#f1c40f"
        android:textColorHighlight="#000000"
        android:ems="10"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="@color/white"
        android:id="@+id/register_button"
        style="@style/Widget.Material3.Button"
        android:text="register"
        android:textSize="20dp"
        android:textColor="#f1c40f"
        android:layout_marginTop="10dp"/>

</LinearLayout>

</ScrollView>